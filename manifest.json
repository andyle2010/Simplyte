{
  "name": "Simplify",
  "version": "1.0",
  "manifest_version": 2,
  "description": "Simplifies text so it is easier to read",
  "permissions": [
    "tabs","<all_urls>"
    ],
  "icons": { "16": "icon16.png",
           "48": "icon48.png",
          "128": "icon128.png" },
  "browser_action": {
    "default_icon": "icon128.png"
  },
  
  "content_scripts": [
        {
        "matches": [
            "http://*/*",
            "https://*/*"
            ],
        "js": ["jquery.js", "popupSL.js"],
        "run_at": "document_end"
        }
    ]
}