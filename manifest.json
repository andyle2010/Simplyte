{
  "name": "Simplify",
  "version": "1.0",
  "manifest_version": 2,
  "description": "Simplifies text so it is easier to read",
  "permissions": [
    "tabs","<all_urls>"
    ],
  "browser_action": {
    "default_icon": "icon.png"
  },
  
  "content_scripts": [
        {
        "matches": [
            "http://*/*",
            "https://*/*"
            ],
        "js": ["popup.js"],
        "run_at": "document_end"         // pay attention to this line
        }
    ]
}